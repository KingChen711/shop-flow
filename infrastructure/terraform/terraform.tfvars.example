# ============================================
# ShopFlow Terraform Variables (Example)
# ============================================
# Copy this file to terraform.tfvars and update values

# General
aws_region  = "us-east-1"
environment = "dev"

# VPC
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnet_cidrs = ["10.0.11.0/24", "10.0.12.0/24", "10.0.13.0/24"]

# EKS
eks_cluster_version = "1.29"
eks_node_groups = {
  general = {
    instance_types = ["t3.medium"]
    capacity_type  = "ON_DEMAND"
    scaling_config = {
      desired_size = 2
      min_size     = 1
      max_size     = 4
    }
  }
}

# GitHub Actions IAM User ARN for EKS access
# Required for GitHub Actions to deploy to EKS cluster
# Format: arn:aws:iam::ACCOUNT_ID:user/USERNAME
# Example: arn:aws:iam::123456789012:user/github-actions
# To find your IAM user ARN:
# 1. Go to AWS Console → IAM → Users
# 2. Click on the user used by GitHub Actions (the one with AWS_ACCESS_KEY_ID)
# 3. Copy the ARN from the Summary page
github_actions_iam_user_arn = "arn:aws:iam::YOUR_ACCOUNT_ID:user/YOUR_USERNAME"

# RDS PostgreSQL
rds_instance_class    = "db.t3.micro"
rds_allocated_storage = 20
rds_master_username   = "shopflow_admin"
rds_master_password   = "CHANGE_THIS_PASSWORD"  # Use secrets manager in production!

# ElastiCache Redis
redis_node_type = "cache.t3.micro"
redis_num_nodes = 1

# MSK Kafka
msk_kafka_version     = "3.5.1"
msk_instance_type     = "kafka.t3.small"
msk_number_of_brokers = 3
msk_ebs_volume_size   = 100
