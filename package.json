{
  "name": "shopflow",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:services": "turbo run dev --filter=@shopflow/*-service",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "proto:generate": "turbo run proto:generate",
    "infra:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "infra:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "infra:logs": "docker-compose -f infrastructure/docker/docker-compose.yml logs -f",
    "infra:ps": "docker-compose -f infrastructure/docker/docker-compose.yml ps",
    "infra:reset": "docker-compose -f infrastructure/docker/docker-compose.yml down -v && docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:build": "bash scripts/docker-build.sh",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.services.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.services.yml down",
    "docker:logs": "docker-compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.services.yml logs -f",
    "k8s:deploy": "kubectl apply -k k8s/",
    "k8s:delete": "kubectl delete namespace shopflow",
    "k8s:status": "kubectl get all -n shopflow",
    "k8s:logs": "kubectl logs -f deployment/api-gateway -n shopflow",
    "monitoring:deploy": "kubectl apply -k k8s/monitoring/",
    "monitoring:delete": "kubectl delete namespace monitoring",
    "monitoring:status": "kubectl get all -n monitoring",
    "monitoring:grafana": "kubectl port-forward svc/grafana 3000:3000 -n monitoring",
    "monitoring:prometheus": "kubectl port-forward svc/prometheus 9090:9090 -n monitoring",
    "monitoring:jaeger": "kubectl port-forward svc/jaeger-query 16686:16686 -n monitoring",
    "monitoring:kibana": "kubectl port-forward svc/kibana 5601:5601 -n monitoring",
    "load-test:health": "k6 run tests/load/k6/scenarios/health-check.js",
    "load-test:browse": "k6 run tests/load/k6/scenarios/product-browse.js",
    "load-test:stress": "k6 run tests/load/k6/scenarios/stress-test.js",
    "seed": "npx tsx scripts/seed-products.ts",
    "seed:products": "npx tsx scripts/seed-products.ts"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "tsx": "^4.7.0",
    "turbo": "^2.6.3",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
